<div id="delete-modal" data-controller="modal" class="modal hidden">
  <div class="bg-gray-800 p-4 rounded">
    <p class="mb-4">Are you sure you want to delete this entry?</p>
    <div class="flex justify-end space-x-2">
      <button data-action="modal#cancel" class="px-3 py-1 bg-gray-600 rounded">Cancel</button>
      <form data-modal-target="form" method="post">
        <input type="hidden" name="_method" value="delete" />
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
        <button type="submit" class="px-3 py-1 bg-red-600 rounded">Delete</button>
      </form>
    </div>
  </div>
</div>
