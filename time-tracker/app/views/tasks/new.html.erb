<h1>New Task</h1>

<%= form_with model: @task do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>
  <%= form.submit 'Create' %>
<% end %>

<%= link_to 'Back', tasks_path %>
